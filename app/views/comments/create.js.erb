if($('#comments_list .comment').length === 0) {
  document.getElementById('comments_list').innerHTML = "";
}
var new_item = $("<%=j render 'comments/comment', :comment => @comment, :comment_counter => @event.comments.count - 1 %>").hide();
$('#comments_list').append(new_item);
new_item.slideDown('show');
document.getElementById("comment_content").value = "";
